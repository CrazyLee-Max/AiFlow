{
    "name": "边定义",
    "description": "定义节点之间的连接关系",
    "template": {
        "sourceNodeId": "源节点ID",
        "targetNodeId": "目标节点ID",
        "sourcePort": "源节点的输出端口（默认为'output'，selector节点需对应branches中的port）",
        "targetPort": "目标节点的输入端口（默认为'input'）"
    },
    "notes": {
        "sourcePort说明": {
            "普通节点": "默认使用 'output'",
            "selector节点": "使用 branches 中定义的 port 名称，如 'branch1', 'branch2', 'default' 等",
            "IntendClassification节点": "使用意图分类的端口名称"
        },
        "targetPort说明": {
            "普通节点": "默认使用 'input'",
            "特殊情况": "某些节点可能有多个输入端口，需根据实际情况指定"
        }
    },
    "examples": [
        {
            "description": "普通节点连接",
            "edge": {
                "sourceNodeId": "start",
                "targetNodeId": "variableDef_1",
                "sourcePort": "output",
                "targetPort": "input"
            }
        },
        {
            "description": "selector分支连接",
            "edge": {
                "sourceNodeId": "selector_1",
                "targetNodeId": "llmClient_1",
                "sourcePort": "branch1",
                "targetPort": "input"
            }
        },
        {
            "description": "selector默认分支连接",
            "edge": {
                "sourceNodeId": "selector_1",
                "targetNodeId": "end",
                "sourcePort": "default",
                "targetPort": "input"
            }
        }
    ]
}
